{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "webworker",
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "actions/*": [
        "src/actions/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}